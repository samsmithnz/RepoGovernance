@using RepoGovernance.Core.Models
@model List<SummaryItem>
@{
    ViewData["Title"] = "Home Page";
}

@{
    string lastUpdated = "unknown";
    if (Model.Count > 0)
    {
        lastUpdated = Model[0].LastUpdated.ToString("d-MMM-yyyy h:mmtt");
    }
}

<div>
    <h4>For account https://github.com/samsmithnz (last updated @lastUpdated)</h4>
    <div>
        <table class="table">
            <tr>
                <th>Repository</th>
                <th>Actions</th>
                <th>Dependabot</th>
                <th>Branch policies</th>
                <th>Auto versioning</th>
                <th>Frameworks detected</th>
            </tr>
            @foreach (SummaryItem item in Model)
            {
                <tr>
                    <td><a href="https://github.com/samsmithnz/@item.Repo">@item.Repo</a></td>
                    @if (item.Actions.Count > 0)
                    {
                        <td>@item.Actions.Count</td>
                    }
                    else
                    {
                        <td>
                            <b>None</b>
                            <i class="bi bi-heart-pulse" style="font-size: 2rem; color: black; height: 16px; width: 16px; java" data-toggle="tooltip" title="@item.ActionRecommendations[0]"></i>
                        </td>
                    }
                    @if (item.Dependabot.Count > 0)
                    {
                        <td>@item.Dependabot.Count</td>
                    }
                    else
                    {
                        <td><b>None</b></td>
                    }
                    @if (item.BranchPolicies != null)
                    {
                        <td>Enabled</td>
                    }
                    else
                    {
                        <td><b>None</b></td>
                    }
                    @if (item.GitVersion.Count > 0)
                    {
                        <td>@item.GitVersion.Count</td>
                    }
                    else
                    {
                        <td><b>None</b></td>
                    }
                    <td>
                        @foreach (string badge in item.DotNetFrameworks)
                        {
                            <span class="badge bg-primary">@badge</span>
                        }
                    </td>
                </tr>
            }
